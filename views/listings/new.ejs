<%layout("layouts/boilerplate")  %>

<div class="row">
    <div class="col-8 offset-2">
<body>
    <h2>Add a new Listing</h2>
    <br> 
    <form action="/listings" method="post" novalidate class=" needs-validation">
        <div class="mb-3">
             <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" placeholder="enter title" required name="listing[title]">
            
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea type="text" class="form-control" name="lisitng[desc]" required></textarea>
            <div class="invalid-feedback">description too short!</div>

        </div>
        

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="image"class="form-control" placeholder="upload image" name="listing[image]">
        </div>
       

        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input type="number"class="form-control" required placeholder="enter price" name="listing[price]">
                <div class="invalid-feedback">Invalid Price! </div>
            </div>
            
            <div class="mb-3 col-8">
                <label for="location" class="form-label">location</label>
                <input type="text"class="form-control" placeholder="enter location" name="listing[location]">
            </div>


        </div>
        
        

        <div class="mb-3">
            <label for="country" class="form-label">country</label>   
            <input type="text" class="form-control"required placeholder="enter country" name="listing[country]">
        </div>

        <button class="btn btn-dark addbtn">Add</button>
    </form>
    
</body>
 </div>
</div>
